<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/d_10">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/d_10"
        android:gravity="center"
        android:text="@string/txt_con_gai"
        android:textColor="@color/bg_app"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_20"
            android:layout_marginStart="@dimen/d_10"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/d_10"
            android:fontFamily="sans-serif-light"
            android:text="@string/txt_content"
            android:textColor="@color/gray_dark"
            android:textSize="18dp" />
    </ScrollView>
</LinearLayout>