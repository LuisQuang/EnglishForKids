<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/iv_topic"
            android:layout_width="@dimen/d_150"
            android:layout_height="@dimen/d_70"
            android:src="@drawable/ic_con_gai"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_10"
            android:gravity="center_vertical"
            android:text="@string/txt_con_gai"
            android:textColor="@color/bg_app"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>