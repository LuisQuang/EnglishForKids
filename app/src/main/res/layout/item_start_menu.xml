<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d_20">

        <ImageView
            android:layout_width="@dimen/d_100"
            android:layout_height="@dimen/d_100"
            android:src="@drawable/ic_launcher"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/d_5"
                android:shadowColor="@color/yellow"
                android:shadowDx="10"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:text="@string/txt_title"
                android:textAllCaps="true"
                android:textColor="@color/bg_app"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10"
                android:fontFamily="sans-serif-light"
                android:text="@string/txt_design"
                android:textColor="@color/gray_mid"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/txt_version"
                android:textColor="@color/gray_mid"
                android:textSize="14sp" />
        </LinearLayout>
    </TableRow>

    <ScrollView
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>